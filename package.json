{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "Image processing api project as part final assessment test of the Backend Development with Node.js course at Udacity (Masterschool)",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc && copyfiles -u 1 src/**/*.jpg build/src/",
    "jasmine": "jasmine --reporter=jasmine-console-reporter \"build/**/**/*.js\"",
    "lint": "eslint \"src/*.ts\" \"src/**/*.ts\" \"build/**/**/*.js\"",
    "prettier": "prettier --config .prettierrc.json \"src/*.ts\" \"src/**/*.ts\" \"build/**/**/*.js\" --write",
    "start": "nodemon --exec ts-node src/app.ts",
    "test": "npm run build && npm run prettier && npm run jasmine"
  },
  "author": "Leandro Barreto",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jasmine": "^4.3.2",
    "@types/memory-cache": "^0.2.2",
    "@types/node": "^20.2.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "express": "^4.18.2",
    "jasmine": "^5.0.0",
    "jasmine-console-reporter": "^3.1.0",
    "memory-cache": "^0.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "sharp": "^0.32.1",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "body-parser": "^1.20.2"
  }
}
